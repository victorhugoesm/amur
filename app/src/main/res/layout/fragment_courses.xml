<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="br.com.amur.amur.CoursesFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_courses_layout">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/addButtonCourses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/ic_mostrar_opcoes"
            fab:fab_colorNormal="#e58f09"
            fab:fab_colorPressed="#e58f09"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right" />

    </RelativeLayout>

</FrameLayout>
